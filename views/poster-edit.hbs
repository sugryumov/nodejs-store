<h1>Edit poster {{poster.title}}</h1>

<form action="/posters/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{poster.title}}" required>
        <label for="title">Poster name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" value="{{poster.price}}" required>
        <label for="price">Poster price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{poster.img}}" required>
        <label for="img">Poster URL</label>
        <span class="helper-text" data-error="Enter url"></span>
    </div>

    <input type="hidden" name="id" value="{{poster.id}}">

    <button class="btn btn-primary">Edit poster</button>
</form>