<h1>Posters page</h1>

{{#if posters.length}}
<div class="row">
    {{#each posters}}
    <div class="col s3">
        <div class="card">
            <div class="card-image">
                <img src="{{img}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action">
                <a href="/posters/{{id}}">Show details</a>
                <a href="/posters/{{id}}/edit?allow=true">Edit poster</a>
                <form action="/cart/add" method="POST" class="posters__add-to-cart">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-primary">Add to cart</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p>Posters not found</p>
{{/if}}